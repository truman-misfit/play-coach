# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /users                      controllers.UserDataController.getUsers
GET     /user                       controllers.UserDataController.getUser(name:Option[String])
POST    /user                       controllers.UserDataController.addUser

GET     /addUser                    controllers.UserDataController.addUserPage
GET     /users/async                controllers.AsyncUserDataController.getUserData

POST    /json                       controllers.JsonController.recvJson
GET     /json                       controllers.JsonController.getJson

->      /static/resource                controllers.MyResource
POST    /static/resource/:id/custom     controllers.MyResource.custom(id: Long)

# ->      /managed/resource               controllers.MyManagedResource
# POST    /managed/resource/:id/custom    @controllers.MyManagedResource.custom(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
